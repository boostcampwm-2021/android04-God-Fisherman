<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="com.android04.godfisherman.localdatabase.entity.TmpFishingRecord" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/bg_time_line"
        app:cardCornerRadius="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_time_line"
                android:layout_width="110dp"
                android:layout_height="0dp"
                setImage = "@{item.image}"
                android:scaleType="centerCrop"
                tools:src="@drawable/test_fish_img"
                android:adjustViewBounds="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/tv_location_in_time_line" />

            <TextView
                android:id="@+id/tv_time_in_time_line"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                tools:text="00 : 12 : 34"
                setDate = "@{item.date}"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/space_small"
                app:layout_constraintStart_toEndOf="@+id/iv_time_line"
                android:layout_marginStart="@dimen/space_small" />

            <TextView
                android:id="@+id/tv_fish_tag_in_time_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="가물치"
                android:text="@{item.fishType}"
                android:textSize="@dimen/text_median"
                app:layout_constraintTop_toBottomOf="@+id/tv_time_in_time_line"
                android:layout_marginTop="@dimen/space_small"
                app:layout_constraintStart_toEndOf="@+id/iv_time_line"
                android:layout_marginStart="@dimen/space_small" />

            <TextView
                android:id="@+id/tv_fish_length_in_time_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="12.3cm"
                android:text="@{Double.toString(item.fishLength)}"
                android:textSize="@dimen/text_median"
                app:layout_constraintTop_toBottomOf="@+id/tv_time_in_time_line"
                android:layout_marginTop="@dimen/space_small"
                app:layout_constraintStart_toEndOf="@+id/tv_fish_tag_in_time_line"
                android:layout_marginStart="@dimen/space_x_small" />

            <TextView
                android:id="@+id/tv_location_in_time_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="상주은모래비치"
                android:text="상주은모래비치"
                android:textSize="@dimen/text_median"
                android:textColor="@color/location_time_line"
                app:layout_constraintTop_toBottomOf="@id/tv_fish_tag_in_time_line"
                android:layout_marginTop="@dimen/space_median"
                app:layout_constraintStart_toEndOf="@+id/iv_time_line"
                android:layout_marginStart="@dimen/space_small"
                android:paddingBottom="@dimen/space_small"
                app:drawableLeftCompat="@drawable/ic_baseline_location_on_16" />

            <View
                android:layout_width="@dimen/space_large"
                android:layout_height="0dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/tv_location_in_time_line"
                android:background="@color/decoration_time_line" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>
