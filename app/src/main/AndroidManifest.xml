<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android04.godfisherman">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <uses-feature android:name="android.hardware.camera.any" />

    <application
        android:name=".common.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_god_fisherman"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_god_fisherman_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GodFisherman"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.intro.GodFishermanIntro"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.camera.upload.UploadActivity"
            android:exported="false" />
        <activity
            android:name=".ui.stopwatch.StopwatchActivity"
            android:exported="true" />
        <activity
            android:name=".ui.camera.CameraActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true"
            android:label="@string/app_name" />
        <service android:name=".utils.StopwatchService" />
    </application>

</manifest>
